<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        app:cardBackgroundColor="#87D5A7"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="352dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <Button

                android:layout_width="352dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:background="#B595D4E8"
                android:drawableLeft="@drawable/icon_sepakbola"
                android:text="AYO FUTSAL" />

            <androidx.cardview.widget.CardView
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="15dp">


            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#87D5A7"
        android:layout_marginTop="20dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="309dp"
        android:layout_height="510dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#fff"
        >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_gravity="center"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Silahkan Mengedit User"
                android:textSize="20dp">

            </TextView>

            <GridLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:padding="20dp"
                >


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nama         :"
                    android:textSize="20dp"
                    >
                </TextView>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textSize="20dp"
                    android:hint="Isi Nama"
                    android:background="#fff"
                    android:gravity="center"
                    >

                </EditText>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No. HP       : "
                    android:textSize="20dp"
                    >
                </TextView>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:hint="Isi No HP"
                    android:textSize="20dp"
                    android:gravity="center"
                    >

                </EditText>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat      : "
                    android:textSize="20dp"
                    >
                </TextView>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Isi Alamat"
                    android:textSize="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    >

                </EditText>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Username :"
                    android:textSize="20dp"
                    >
                </TextView>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Isi Username"
                    android:textSize="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    >

                </EditText>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Password :"
                    android:textSize="20dp"
                    >
                </TextView>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Isi Password"
                    android:textSize="20dp"
                    android:inputType="textPassword"
                    android:background="#fff"
                    android:gravity="center"
                    >

                </EditText>
            </GridLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Update"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    >

                </Button>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>



</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>