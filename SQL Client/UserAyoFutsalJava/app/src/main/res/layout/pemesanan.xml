<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_marginBottom="50dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:text="ID"
        android:id="@+id/prdId"
        android:textSize="17dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nama"
        android:id="@+id/prdNama"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Lapangan"
        android:id="@+id/prdLapangan"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_below="@+id/prdNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Jam"
        android:id="@+id/prdJam"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_below="@+id/prdLapangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Tanggal"
        android:id="@+id/prdTanggal"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_below="@+id/prdJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Catatan"
        android:id="@+id/prdCatatan"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_below="@+id/prdTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>